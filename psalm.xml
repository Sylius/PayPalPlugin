<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <file name="src/DependencyInjection/Configuration.php" />
            <file name="src/UrlUtils.php" />
            <file name="src/Controller/PayWithPayPalFormAction.php" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <DeprecatedMethod>
            <errorLevel type="info">
                <referencedMethod name="Payum\Core\Model\GatewayConfigInterface::getFactoryName" />
            </errorLevel>
        </DeprecatedMethod>

        <MissingParamType>
            <errorLevel type="info">
                <file name="src/Payum/Request/CompleteOrder.php"/>
            </errorLevel>
        </MissingParamType>

        <MixedArgument>
            <errorLevel type="info">
                <file name="src/Controller/ProcessPayPalOrderAction.php"/>
                <file name="src/Payum/Action/CompleteOrderAction.php"/>
                <file name="src/Controller/UpdatePayPalOrderAction.php"/>
            </errorLevel>
        </MixedArgument>

        <MixedArrayAccess>
            <errorLevel type="info">
                <file name="src/Controller/ProcessPayPalOrderAction.php"/>
                <file name="src/DependencyInjection/SyliusPayPalExtension.php"/>
                <file name="src/Payum/Action/CompleteOrderAction.php"/>
                <file name="src/Processor/PayPalPaymentRefundProcessor.php"/>
                <file name="src/Controller/UpdatePayPalOrderAction.php"/>
                <file name="src/Controller/Webhook/RefundOrderAction.php"/>
            </errorLevel>
        </MixedArrayAccess>

        <MixedAssignment>
            <errorLevel type="info">
                <file name="src/Downloader/SftpPayoutsReportDownloader.php"/>
            </errorLevel>
        </MixedAssignment>

        <MoreSpecificImplementedParamType>
            <errorLevel type="info">
                <directory name="src/Payum/Action/"/>
            </errorLevel>
        </MoreSpecificImplementedParamType>

        <PropertyNotSetInConstructor>
            <errorLevel type="info">
                <file name="src/Payum/Request/CompleteOrder.php"/>
                <file name="src/Controller/PayPalOrderItemController.php"/>
            </errorLevel>
        </PropertyNotSetInConstructor>

        <TooManyArguments>
            <errorLevel type="info">
                <file name="src/Downloader/SftpPayoutsReportDownloader.php"/>
            </errorLevel>
        </TooManyArguments>

        <TypeDoesNotContainType>
            <errorLevel type="info">
                <file name="src/DependencyInjection/SyliusPayPalExtension.php"/>
            </errorLevel>
        </TypeDoesNotContainType>
    </issueHandlers>
</psalm>
